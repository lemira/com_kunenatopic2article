name: Build Joomla Package
on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          ref: interface

      - name: Set timestamp
        run: |
          TIMESTAMP=$(TZ="Europe/Berlin" date +"%y%m%d-%H%M")
          echo "TIMESTAMP=$TIMESTAMP" >> $GITHUB_ENV

      - name: Create clean build folder
        run: |
          rm -rf build
          mkdir build

          # Копировать только нужные каталоги
          cp -r admin build/admin
          cp -r media build/media
          cp -r manifest build/manifest

          # Если манифестный XML должен лежать в корне — раскомментировать:
          # cp manifest/*.xml build/

      - name: Create ZIP
        run: |
          cd build
          zip -r ../KunenaTopic2Article-${{ env.TIMESTAMP }}.zip . \
            -x "*/docs/*" \
            -x "docs/*" \
            -x "*.md" \
            -x ".git*" \
            -x ".github/*"

      - name: Upload zip
        uses: actions/upload-artifact@v4
        with:
          name: KunenaTopic2Article-${{ env.TIMESTAMP }}
          path: KunenaTopic2Article-${{ env.TIMESTAMP }}.zip
