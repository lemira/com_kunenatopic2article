    <authorUrl>https://geschichte-chronologie.de</authorUrl>
    <version>1.0.3</version>
    <description>COM_KUNENATOPIC2ARTICLE_DESC</description>
    
    <namespace path="src">Joomla\Component\KunenaTopic2Article</namespace>
    <scriptfile>script.php</scriptfile>
    
    <administration>
        <menu link="option=com_kunenatopic2article">COM_KUNENATOPIC2ARTICLE</menu>
        
        <files folder="admin">
            <folder>services</folder>
            <folder>forms</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>sql</folder>
            <folder>language</folder>
            <folder>assets/css</folder>
       </files>
     </administration>

    <files>
    <filename>script.php</filename>
    </files>

        <languages folder="admin/language">
    <language tag="en-GB">en-GB/com_kunenatopic2article.ini</language>
    <language tag="en-GB">en-GB/com_kunenatopic2article.sys.ini</language>
    <language tag="de-DE">de-DE/com_kunenatopic2article.ini</language>
    <language tag="de-DE">de-DE/com_kunenatopic2article.sys.ini</language>
    <language tag="ru-RU">ru-RU/com_kunenatopic2article.ini</language>
    <language tag="ru-RU">ru-RU/com_kunenatopic2article.sys.ini</language>
        </languages>
        
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
       
    <media destination="com_kunenatopic2article" folder="media/com_kunenatopic2article">
        <folder>css</folder>
    </media>
    
    <updateservers>
        <server type="extension" priority="1" name="Kunena Topic to Article Updates">
            https://raw.githubusercontent.com/lemira/comkunenatopic2article/master/updates.xml
        </server>
    </updateservers>
    
</extension>
