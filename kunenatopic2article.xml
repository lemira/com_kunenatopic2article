    <scriptfile>script.php</scriptfile>

    <administration>
        <menu link="option=com_kunenatopic2article">COM_KUNENATOPIC2ARTICLE</menu>
        
        <files folder="admin">
            <folder>services</folder>
            <folder>forms</folder>
            <folder>src</folder>
